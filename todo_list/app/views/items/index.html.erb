<div class="row mb-5">
  <div class="col-sm-6">
    <h3>Лист: <%= @group.title %></h3>
    <small>Описание: <%= @group.description %></small><br/>
    <small>Всего задач: <%= @group.items.count %></small><br/>
    <small>Активных задач: <%= @group.items.active.count %></small><br/>
    <small>Задач выполнено: <%= @group.items.not_active.count %></small><br/>
    <form action="/groups/<%= @group.id %>" method="post" enctype="application/x-www-form-urlencoded" class="mt-2">
      <input type="hidden" name="_method" value="DELETE">
      <button class="btn btn-danger btn-sm">удалить список</button>
    </form>
  </div>
</div>

<%= render_partial :new_item_form, item: Item.new %>

<div class="row">
  <div class="col">
    <ul class="list-group">
      <% if @items.size > 0 %>
        <%= render_partial :list_item, collection: @items %>
      <% else %>
        <li class="list-group-item">Данных нет. Пожалуйста добавьте данные в лист</li>
      <% end %>
    </ul>
  </div>
  <div class="col">
  </div>
</div>

<div class="row mt-4">
  <div class="col">
    <a href="/">Вернутся на главную</a>
  </div>
  <div class="col">
  </div>
</div>
